@inject IJSRuntime js

    
<div style="display: flex; flex-wrap: wrap; align-items: center;">
   
   <ListadoGenerico Listado="Peliculas">
        <HayRegistros Context="pelicula">
            <PeliculaIndividual Pelicula="pelicula" EliminarPelicula="@EliminarPelicula" />
        </HayRegistros>
   </ListadoGenerico>


</div>



@code
{

    [Parameter] public List<Pelicula> Peliculas { get; set; }

    bool MostrarBotones = true;
    async Task EliminarPelicula(Pelicula pelicula)
    {
        
        var confirmar = await js.Confirm($"¿Desea borrar la pelicula {pelicula.Titulo}?");
        if (confirmar)
        {
           Peliculas.Remove(pelicula);
           Console.WriteLine($"Se ha eliminado una pelicula {pelicula.Titulo}");
        }
    }

 
}

